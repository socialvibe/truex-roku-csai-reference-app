<!--
    MainScene

    Controls Channel UX by hosting, coordinating, and transitioning between Flow's.

    Handles loading the TrueX library, presenting LoadingFlow when long operations are running,
transitioning
    between DetailsFlow and ContentFlow, and notifying users of errors with ErrorFlow.
-->
<component name="MainScene" extends="Scene"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

  <script type="text/brightscript" uri="pkg:/components/main-scene.brs" />
  <script type="text/brightscript" uri="pkg:/source/utils.brs" />

  <interface>
    <function name="setup" />
  </interface>

  <children>
    <!-- @see MainScene#init() to get an idea of the library loading process. -->
    <ComponentLibrary id="TruexAdRendererLib" uri="http://ctv.truex.com/roku/v1/release/TruexAdRenderer-Roku-v1.pkg" />
  </children>
</component>
